---
import Header from "../components/Header.astro";

interface Props {
  title: string;
  page: string;
}

const { title, page } = Astro.props;
---

<!doctype html>
<html lang="es" class="h-screen font-sans text-zinc-200">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col justify-between bg-zinc-900">
    <Header />

    <h1 class="text-xl sm:text-2xl text-center font-black my-4">{page}</h1>

    <main class="container mx-auto p-4 max-w-screen-lg">
      <slot />
    </main>
  </body>
</html>
