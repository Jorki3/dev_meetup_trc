---
import Header from "../components/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="h-screen font-sans text-zinc-200">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | devs_meetups.trc</title>
  </head>
  <body class="justify-between bg-zinc-900">
    <Header />

    <div class="min-h-screen">
      <h1 class="text-xl sm:text-2xl text-center font-black my-4">{title}</h1>

      <main class="container mx-auto p-4 max-w-screen-lg">
        <slot />
      </main>
    </div>
  </body>
</html>
