---
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import Card from "../components/Card.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="h-screen font-sans text-zinc-200">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Comunidad de programadores y desarrolladores de La Laguna"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/code.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | devs_meetups.trc</title>

    <ViewTransitions />
  </head>
  <body class="justify-between bg-zinc-900">
    <Header />

    <main class="container mx-auto text-white">
      <div class="flex flex-col sm:justify-center items-center pt-6 sm:pt-0">
        <div
          class="w-full sm:max-w-lg mt-6 px-6 py-4 shadow-md overflow-hidden sm:rounded-lg bg-zinc-800"
        >
          <slot />
        </div>
      </div>
    </main>
  </body>
</html>
