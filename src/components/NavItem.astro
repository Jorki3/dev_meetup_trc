---
const { link } = Astro.props;
---

<a
  class="px-4
    py-2
    text-2xl
    text-zinc-300
    block
    hover:ring-1
  hover:ring-indigo-600
  hover:text-indigo-600
    rounded-lg
    transition
    ease-in-out
    hover:ease-in
    hover:animate-pulse
    hover:-translate-y-1
    hover:cursor-pointer"
  href={link}
>
  <slot />
</a>
